<%= render "shared/second-header"%>

<%= form_with model: current_user, url: user_path(current_user), class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      会員情報の編集
    </h1>
  </div>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :nick_name, class:"input-default", placeholder:"例) furima太郎", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <p class='form-info-header'>
      本人情報
    </p>
    <p class='form-info-text'>
      ※ 本人情報は変更できません。
    </p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前(全角)</label>
    </div>
    <div class='input-name-wrap'>
      <%= current_user.last_name %>
      <%= current_user.first_name %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前カナ(全角)</label>
    </div>
    <div class='input-name-wrap'>
      <%= current_user.last_name_kana %>
      <%= current_user.first_name_kana %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
    </div>
    <div class='birth-wrap'>
      <%= current_user.birthday.year %>年
      <%= current_user.birthday.month %>月
      <%= current_user.birthday.day %>日
    </div>
  </div>
  <div class="form-group">
    <p class='form-info-header'>
      カード情報
    </p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">カード番号</label>
    </div>
    <div class='input-name-wrap'>
      <%= "**** **** **** " + @card[:last4] %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">有効期限</label>
    </div>
    <div class='exp-wrap'>
      <%= @card[:exp_month] %>
      /
      <%= @card[:exp_year] %>
    </div>
  </div>
  <div class='register-btn'>
    <%= f.submit "変更を保存" ,class:"register-red-btn" %>
  </div>
  <p class='register-info'>本人情報の登録について</p>
</div>
<% end %>

<%= render "shared/second-footer"%>